<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99badd"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:text="Welcome to Case Crackers Cars Marketplace!"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/bodybrowse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="86dp"
        android:text="Browse by Body Type"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/colorbrowse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bodybrowse"
        android:layout_marginTop="206dp"
        android:text="Browse by Color"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pricebrowse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/twenty"
        android:layout_alignStart="@+id/bodybrowse"
        android:text="Browse by Price"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/advanced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Advanced Search"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/wagon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bodybrowse"
        android:layout_below="@+id/wagonp"
        android:text="Wagon"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/wagonp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bodybrowse"
        android:layout_marginTop="102dp"
        app:srcCompat="@drawable/ic_wagon" />

    <ImageView
        android:id="@+id/coupep"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bodybrowse"
        android:layout_marginStart="81dp"
        app:srcCompat="@drawable/ic_coupe" />

    <TextView
        android:id="@+id/coupe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/coupep"
        android:layout_alignTop="@+id/wagon"
        android:text="Coupe"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/hatchbackp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/wagon"
        android:layout_alignParentStart="true"
        android:layout_marginStart="139dp"
        app:srcCompat="@drawable/ic_hatchback" />


    <ImageView
        android:id="@+id/minivanp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/bodybrowse"
        android:layout_below="@+id/wagon"
        app:srcCompat="@drawable/ic_minivan" />

    <TextView
        android:id="@+id/minivan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bodybrowse"
        android:layout_below="@+id/minivanp"
        android:text="Minivan"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/pickupp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/coupep"
        android:layout_alignTop="@+id/minivanp"
        app:srcCompat="@drawable/ic_pickup" />

    <TextView
        android:id="@+id/pickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/minivanp"
        android:layout_marginStart="69dp"
        android:text="Pickup Truck"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/sedanp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/hatchbackp"
        android:layout_alignTop="@+id/minivanp"
        app:srcCompat="@drawable/ic_sedan" />

    <TextView
        android:id="@+id/sedan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/hatchbackp"
        android:layout_below="@+id/minivanp"
        android:text="Sedan"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/suvp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/wagon"
        android:layout_toEndOf="@+id/advanced"
        app:srcCompat="@drawable/ic_suv" />

    <TextView
        android:id="@+id/suv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/suvp"
        android:layout_below="@+id/minivanp"
        android:text="SUV/Crossover"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/vanp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/van"
        android:layout_below="@+id/wagon"
        app:srcCompat="@drawable/ic_van" />

    <TextView
        android:id="@+id/van"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bodybrowse"
        android:layout_below="@+id/minivanp"
        android:text="Van"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/convertiblep"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/bodybrowse"
        android:layout_toEndOf="@+id/bodybrowse"
        app:srcCompat="@drawable/ic_convertible" />

    <TextView
        android:id="@+id/convertible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/wagon"
        android:layout_toEndOf="@+id/bodybrowse"
        android:text="Convertible"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/gray"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/blue"
        android:layout_toEndOf="@+id/colorbrowse"
        android:background="#A9A9A9"
        tools:background="#808080" />

    <TextView
        android:id="@+id/blue"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pickup"
        android:layout_alignTop="@+id/yellow"
        android:background="@color/colorPrimary"
        tools:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/black"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorbrowse"
        android:layout_toEndOf="@+id/van"
        android:background="@android:color/background_dark" />

    <TextView
        android:id="@+id/white"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorbrowse"
        android:layout_toEndOf="@+id/colorbrowse"
        android:background="@android:color/background_light"
        tools:background="@android:color/background_light" />

    <TextView
        android:id="@+id/brown"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorbrowse"
        android:layout_toEndOf="@+id/coupep"
        android:background="#8B4513"
        tools:background="#8B4513" />

    <TextView
        android:id="@+id/red"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pickup"
        android:layout_below="@+id/colorbrowse"
        android:background="#FF0000"
        tools:background="#FF0000" />

    <TextView
        android:id="@+id/silver"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/wagon"
        android:layout_below="@+id/colorbrowse"
        android:background="#C0C0C0" />

    <TextView
        android:id="@+id/yellow"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pricebrowse"
        android:layout_alignEnd="@+id/wagon"
        android:background="#FFFF00"
        tools:background="#FFFF00" />

    <TextView
        android:id="@+id/green"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gray"
        android:layout_toEndOf="@+id/coupep"
        android:background="#008000"
        tools:background="#008000" />

    <CheckBox
        android:id="@+id/twenty"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/forty"
        android:layout_alignStart="@+id/bodybrowse"
        android:text="$0-20,000" />

    <CheckBox
        android:id="@+id/forty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sixty"
        android:layout_alignStart="@+id/bodybrowse"
        android:text="$20,000-40,000" />

    <CheckBox
        android:id="@+id/sixty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eighty"
        android:layout_alignStart="@+id/bodybrowse"
        android:text="$40,000-60,000" />

    <CheckBox
        android:id="@+id/eighty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hundred"
        android:layout_alignStart="@+id/bodybrowse"
        android:text="$40,000-80,000" />

    <CheckBox
        android:id="@+id/hundred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bodybrowse"
        android:layout_marginBottom="39dp"
        android:text="$80,000-100,000" />

    <CheckBox
        android:id="@+id/hundredTwenty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/twenty"
        android:layout_toEndOf="@+id/colorbrowse"
        android:text="$100,000-120,000" />

    <CheckBox
        android:id="@+id/hundredForty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twenty"
        android:layout_toEndOf="@+id/colorbrowse"
        android:text="$120,000-140,000" />

    <CheckBox
        android:id="@+id/hundredSixty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/hundredTwenty"
        android:layout_below="@+id/forty"
        android:text="$140,000-160,000" />

    <CheckBox
        android:id="@+id/hundredEighty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/hundredTwenty"
        android:layout_below="@+id/sixty"
        android:text="$160,000-180,000" />

    <CheckBox
        android:id="@+id/twoHundred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eighty"
        android:layout_toEndOf="@+id/colorbrowse"
        android:text="$180,000-200,000" />

    <TextView
        android:id="@+id/hatchback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/hatchbackp"
        android:layout_alignTop="@+id/wagon"
        android:text="Hatchback"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fetched"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="263dp"
            android:layout_toEndOf="@+id/wagon"
            android:hint="Fetched Text Here"
            android:text="TextView" />
    </ScrollView>

</RelativeLayout>
</ScrollView>